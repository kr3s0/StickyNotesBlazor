<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">The Stickies</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Home" >
                <img src="/home.svg" height="30px" width="40px" />              Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Sections">
                <img src="/folder.svg" height="30px" width="40px" />            Sections
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Pages">
                <img src="/pages.svg" height="30px" width="40px" />             Pages
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Notes">
                <img src="/notes.svg" height="30px" width="40px" />             Notes
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <img src="/department.svg" height="30px" width="40px" />             About
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = false;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
